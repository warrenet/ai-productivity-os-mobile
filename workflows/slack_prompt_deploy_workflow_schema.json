{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "steps": { "type": "array", "items": { "type": "string" } },
    "retry": {
      "type": "object",
      "properties": {
        "count": { "type": "integer", "minimum": 0 },
        "delayMs": { "type": "integer", "minimum": 0 }
      }
    },
    "fallback": { "type": "string" }
  },
  "required": ["name", "steps"]
}
